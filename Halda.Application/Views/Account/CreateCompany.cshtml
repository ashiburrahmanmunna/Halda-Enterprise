@model CreateCompanyDTO;

@{
    ViewData["Title"] = "Create Your Company";
}

<style>
    .register-box {
        width: 300px;
        margin: 0 auto;
        margin-top: 50px;
        font-family: Arial, sans-serif;
    }

    .card-body.register-card-body {
        text-align: center;
    }

    .input-group {
        margin-bottom: 10px;
    }

    .form-control {
        border-radius: 5px;
        border: 1px solid #ccc;
        padding: 10px;
    }

    .input-group-text {
        background-color: #f5f5f5;
    }

    .button-41 {
        background-color: #007bff;
        color: #fff;
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
        cursor: pointer;
        font-size: 16px;
    }

        .button-41:hover {
            background-color: #0056b3;
        }
</style>

<div class="register-box">
    <div class="card">
        <div class="card-body register-card-body">
            <!-- Your existing content here -->

            <form asp-action="CreateCompany" method="post">
                <!-- Hidden input field for Id -->
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="UserId" />
                @* <input type="hidden" asp-for="User.Id" /> *@

                <!-- Input field for Name property -->
                <div class="input-group mb-3">
                    <input asp-for="Name" class="form-control" placeholder="Company name" required="required" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-building"></span>
                        </div>
                    </div>
                </div>

                <!-- Button to submit the form -->
                <div class="row">
                    <div class="col-12">
                        <button type="submit" class="button-41">Create Company</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>