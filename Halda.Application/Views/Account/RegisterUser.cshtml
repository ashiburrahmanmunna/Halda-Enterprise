@model RegisterModel

@{
    ViewData["Title"] = "Register";
}
<div class="register-box">


    <div class="card">
        <div class="card-body register-card-body">
            <div class="register-logo">
                <p><b>Get Started</b></p>
            </div>
            <p class="login-box-msg">Let's create your account</p>

            <form asp-action="Register" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="userCompanyID" value=@ViewBag.ComId />
                <div class="input-group mb-3">
                    <input asp-for="UserName" class="form-control" placeholder="User name" required="required" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-user"></span>
                        </div>
                    </div>
                </div>
                <div class="input-group mb-3">
                    <input asp-for="Email" type="email" class="form-control" placeholder="Email" required="required" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-envelope"></span>
                        </div>
                    </div>
                </div>
                <div class="input-group mb-3">
                    <input asp-for="PhoneNumber" class="form-control" placeholder="Phone Number" required="required" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fa-solid fa-phone"></span>
                        </div>
                    </div>
                </div>
                @*                <div class="input-group mb-3">

                <select class="form-control" id="projectSelect" asp-for="userCompanyID" required>
                <option value="">Select Company</option>
                @foreach (var company in ViewBag.Companies)
                {
                <option value="@company.Id">@company.Name</option>
                }
                </select>
                </div>*@
                <div class="input-group mb-3">
                    <input asp-for="Password" type="password" class="form-control" placeholder="Password" required="required" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-lock"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    @*                    <div class="col-8">
                    <div class="icheck-primary">
                    <input type="checkbox" id="agreeTerms" name="terms" value="agree">
                    <label for="agreeTerms">
                    I agree to the <a href="#">terms</a>
                    </label>
                    </div>
                    </div>*@
                    <!-- /.col -->
                    <div class="col-4">
                        <button type="submit" class="button-41">Sign Up</button>
                    </div>
                    <!-- /.col -->
                </div>
            </form>

            <a asp-action="Login" style="text-decoration: none;" class="text-center">I already have an account</a>
        </div>
        <!-- /.form-box -->
    </div><!-- /.card -->
</div>
